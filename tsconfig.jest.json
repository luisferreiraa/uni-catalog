{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "jest.setup.ts", // Certifique-se de que est√° .ts aqui
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "__tests__/**/*.js",
        "__tests__/**/*.jsx"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}