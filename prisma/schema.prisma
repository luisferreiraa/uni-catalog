generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CatalogRecord {
  id               String         @id @default(cuid())
  templateName     String
  templateDesc     String?
  recordTemplateId String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  fields           CatalogField[]
  textUnimarc      String?
}

model CatalogField {
  id        String        @id @default(cuid())
  tag       String
  value     String
  subfields Json
  fieldType FieldType
  recordId  String
  record    CatalogRecord @relation(fields: [recordId], references: [id])

  @@index([recordId])
}

enum FieldType {
  CONTROL
  DATA
}
